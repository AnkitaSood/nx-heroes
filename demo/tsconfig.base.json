{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@shared/data-access-heroes": [
        "libs/shared/data-access-heroes/src/index.ts"
      ],
      "@shared/models": ["libs/shared/models"],
      "@toh/feature-dashboard": [
        "libs/tour-of-heroes/feature-dashboard/src/index.ts"
      ],
      "@toh/feature-hero-details": [
        "libs/tour-of-heroes/feature-hero-details/src/index.ts"
      ],
      "@toh/feature-heroes": [
        "libs/tour-of-heroes/feature-heroes/src/index.ts"
      ],
      "@tour-of-heroes/shared-ui-kit": ["libs/shared/ui-kit/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
