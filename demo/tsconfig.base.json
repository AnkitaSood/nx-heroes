{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@config": ["config/index.ts"],
      "@shared-ui-kit": ["libs/shared/ui-kit/src/index.ts"],
      "@shared/data-access-state-base": [
        "libs/shared/data-access-state-base/src/index.ts"
      ],
      "@shared/models": ["libs/shared/models/src/index.ts"],
      "@shared/styles": ["libs/shared/styles/src/index.ts"],
      "@tod/data-access-dogs": [
        "libs/tour-of-dogs/data-access-dogs/src/index.ts"
      ],
      "@toh/data-access-heroes": [
        "libs/tour-of-heroes/data-access-heroes/src/index.ts"
      ],
      "@toh/feature-add-hero": [
        "libs/tour-of-heroes/feature-add-hero/src/index.ts"
      ],
      "@toh/feature-dashboard": [
        "libs/tour-of-heroes/feature-dashboard/src/index.ts"
      ],
      "@toh/feature-header": [
        "libs/tour-of-heroes/feature-header/src/index.ts"
      ],
      "@toh/feature-hero-details": [
        "libs/tour-of-heroes/feature-hero-details/src/index.ts"
      ],
      "@toh/feature-hero-search": [
        "libs/tour-of-heroes/feature-hero-search/src/index.ts"
      ],
      "@toh/feature-heroes": [
        "libs/tour-of-heroes/feature-heroes/src/index.ts"
      ],
      "@toh/ui-kit-heroes": ["libs/tour-of-heroes/ui-kit-heroes/src/index.ts"],
      "@tour-of-heroes/stories": ["libs/stories/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
